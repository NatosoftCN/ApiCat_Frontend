{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDirs": [
      "src"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}